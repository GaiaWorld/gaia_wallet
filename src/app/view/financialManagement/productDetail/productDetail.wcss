.productDetailPage{
    overflow-x: hidden;
    overflow-y: auto;
}
.profit{
    min-height:150px;
    background:white;
    text-align:center;
    padding-top:50px;
    padding-left:30px;
    padding-right:30px;  
    box-sizing:border-box;
}
.profitTitle{
    font-size: 24px;
}
.profitNum{
    font-size: 32px;
    padding-bottom: 30px;
    color: rgb(216, 30, 30);
    border-bottom: 1px solid #cec8c8;
}
.rules{
    display:flex;
    flex-wrap:nowrap;
    justify-content:space-around;
    box-sizing: border-box;
    padding: 30px;
}
.ruleTitle{
    font-size: 28px;
}
.ruleContent{
    font-size: 20px;
}
.process{
    background:#fff;
    margin-top:20px;
    min-height:150px;
}
.processTitle{
    font-size: 20px;
    padding:10px 30px; 
    border-bottom: 1px solid rgb(190, 184, 184);
}
.processContent{
    padding: 30px;
}
.stepBox{
    width: 50%;
    margin: auto;
}
.productInfo{
    padding:30px;
    background:white;
    margin-top: 20px;
}
.productDetail{
    
}
.title{
    margin:20px 0;
    font-size:28px; 
}
.mainDetail{
    font-size: 20px;
    color: #888;
}
.detailP{
    margin-top: 5px;
    margin-bottom: 5px; 
}
.productIntroduction{

}
.paragraph{
    font-size: 20px;
    color: #888;
}
.bottomFixed{
    position:fixed;
    bottom:0;
    width:100%;
    height:180px;
    background: #fff;
}
.Surplus{
    padding-left: 30px;
    padding-right: 30px;
    padding-top: 30px;  
    text-align: center;
    font-size: 18px;
    color: #888;
}
.progressBar{
    margin-top: 10px;
    border-radius:15px; 
    height: 15px;
    background-position: center;
    overflow: hidden;
    border: 1px solid rgb(204, 122, 15);
}
.barBackground{
    width: 100%;
    background: rgb(204, 122, 15);
    height: 100%;
}
.butBottom{
    text-align: center;
    margin-top: 30px;
    height: 80px;
    line-height: 80px;
    font-size: 32px;
    background: #AAA;
    color: rgb(248, 243, 243);
}
.active{
    color:#fff;
    background: rgb(204, 122, 15);
}